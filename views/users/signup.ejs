<% layout("layouts/boilerplate") %>

<div class="row mt-3">
    <h2 class="col-6 offset-3">SignUp on WanderLust</h2>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>

            <div class="mb-3">
                <label for="username" class="form-lable">Username</label>
                <input class="form-control" type="text" name="username" required id="username">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">This field can't be empty</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-lable">Email</label>
                <input class="form-control" type="email" name="email" required id="email">
            </div>

            <div class="mb-3">
                <label for="password" class="form-lable">Password</label>
                <input class="form-control" type="password" name="password" required id="password">
            </div>
            <button class="btn btn-success">SignUp</button>
        </form>
    </div>
</div>